$(document).ready(function(){
    $('#listUser').show();
    $('#UserSelected').hide();

    formListUserValidation();

    if($('#userposition').val() != ''){
        $('#listUser').hide();
        $('#UserSelected').show();
    }

    // $('#btnSubmitList').click(function (){
    //     $('#listUser').hide();
    //     $('#UserSelected').show();
    // });

    $("#parentMenu1").click(function(){
        $('#Menu1child1').not(this).prop('checked', this.checked);
        $('#Menu1child2').not(this).prop('checked', this.checked);
    });

    $("#parentMenu2").click(function(){
        $('#Menu2child1').not(this).prop('checked', this.checked);
        $('#Menu2child2').not(this).prop('checked', this.checked);
        $('#Menu2child3').not(this).prop('checked', this.checked);
        $('#Menu2child4').not(this).prop('checked', this.checked);
    });

    $("#parentMenu3").click(function(){
        $('#Menu3child1').not(this).prop('checked', this.checked);
        $('#Menu3child2').not(this).prop('checked', this.checked);
    });
});

function formListUserValidation(){
    $("#formInputListUser").validate({
        rules: {
            userposition: {
                required: true
            }
        },
        messages: {
            userposition: {
                required: 'Pilih user position terlebih dahulu'
            },
        },
        errorElement: 'div',
        errorPlacement: function (error, element) {
            let placement = $(element).data('error');
            if (placement) {
                $(placement).append(error)
            } else {
                error.insertAfter(element);
            }
        },
        submitHandler: function(form) { 
            console.log();
            renderText = $('#userposition').val();

            $('#selected').html(renderText);

            $('#listUser').hide();
            $('#UserSelected').show();
        }
    });
}


